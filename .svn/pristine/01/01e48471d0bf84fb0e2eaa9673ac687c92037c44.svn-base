#ifndef HID_PAGE_DEVICE

/**
 * USB_HID_USAGES_DEVICE HID Usages for Device
 * Contains USB HID Usages definitions for Generic Device Control Page
 * This module based on
 * + [HID Usage Tables Version 1.12](https://www.usb.org/sites/default/files/documents/hut1_12v2.pdf)
 */
#define HID_PAGE_DEVICE                0x06    /** Generic device control usage page.*/
#define HID_DEVICE_BATTERY_STRENGHT    0x20    /** DV Current battery status.*/
#define HID_DEVICE_WIRELESS_CHANNEL    0x21    /** DV Logical wireless channel.*/
#define HID_DEVICE_WIRELESS_ID         0x22    /** DV Unique wireless device ID.*/
#define HID_DEVICE_DISCO_WIRELESS_CTL  0x23    /** OSC Wirleless discover control.*/
#define HID_DEVICE_SECURITY_CHAR_ENT   0x24    /** OSC Code character entered.*/
#define HID_DEVICE_SECURITY_CHAR_ERA   0x25    /** OSC Code character erased.*/
#define HID_DEVICE_SCURITY_CODE_CLR    0x26    /** OSC Security code cleared.*/

#endif

